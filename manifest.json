{

  "description": "Rotates the web page you are on",
  "manifest_version": 2,
  "name": "RotateMe",
  "version": "1.1",
  "homepage_url": "https://sturlas.me/",
  "icons": {
    "48": "icons/sturla-48.png",
    "96": "icons/sturla-96.png"
  },
  "content_scripts": [
    {
      "matches": 
      [
        "*://*/*",
        "*://*.mozilla.org/*",
        "*://*.sturlas.me/*"
    ],
      "js": ["rotateMe.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/sturla-16.png",
      "32": "icons/sturla-32.png"
    }
    }

}
